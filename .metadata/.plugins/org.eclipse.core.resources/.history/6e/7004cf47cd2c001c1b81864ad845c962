<style>
#wrap {
	margin: 0;
	padding: 0;	
	width: 700px;
	height: 500px;
	display: flex;
}
#left {
	width: 100px;
	height: 100px;
	margin: auto;
}
#pic {
	width: 500px;
	height: 500px;
}
#right {
	width: 100px;
	height: 100px;
	margin: auto;
}
</style>
<script type="text/javascript">
	var num = 1;
	function prefPic(){
		if(num == 1){
			num = 8
			document.getElementById('pic').src = "resources/images/최근상품0"+num+".jpg"
		}else{
			num--;
			document.getElementById('pic').src = "resources/images/최근상품0"+num+".jpg"
		}
		document.getElementById('num').innerHTML = num+" 번"
		
	}
	function nextPic(){
		if(num == 8){
			num = 1
			document.getElementById('pic').src = "resources/images/최근상품0"+num+".jpg"
		}else{
			num++;
			document.getElementById('pic').src = "resources/images/최근상품0"+num+".jpg"		
		}		
		document.getElementById('num').innerHTML = num+" 번"
	}
</script>
</head>
<body>
<p id="num"></p>
<div id="wrap">
	<img id="left" src="resources/images/왼쪽화살표.jpg" onclick="prefPic()">
	<img id="pic" src="resources/images/최근상품01.jpg">
	<img id="right" src="resources/images/오른쪽화살표.jpg" onclick="nextPic()">
</div>
</body>
