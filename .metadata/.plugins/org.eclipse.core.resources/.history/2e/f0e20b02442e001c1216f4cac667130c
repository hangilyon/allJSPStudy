<script type="text/javascript">
	function setImg(){
		console.log(event.target.src)
		let getSrc = event.target.src;
		let setSrc = document.getElementById('bigImg')
		let viewDiv = document.getElementById('setbigImg')
		setSrc.src = getSrc
		viewDiv.style.display = "block"
	}
</script>
<body>
