<script type="text/javascript">
	var DBImg = ['최근상품01','최근상품02','최근상품03','최근상품04','최근상품05','최근상품06','최근상품07','최근상품08']
	
	function init(){
		setImg()
	}
	function setImg(){
		var pic = document.getElementById('pic')
		for(i=0;i<DBImg.length;i++){
			var opt = document.createElement('img')
			opt.src = "resources/images/"+DBImg[i]+".jpg"
			opt.id = i+"num"
			opt.setAttribute('onClick', 'selectImg()')
			pic.appendChild(opt)
		}
	}
	function selectImg(){
		var text1 = document.getElementById('cngText')
		console.log(text)
		text1.innerHTML('바꾸겟습니다.')
		
		

	}

