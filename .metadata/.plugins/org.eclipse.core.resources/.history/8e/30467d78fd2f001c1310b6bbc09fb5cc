<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="jquery-1.12.1-ui.js"></script>
<script type="text/javascript">
	var cnt = 16;
	$(function(){
		$("#remocon").draggable()
		$("#add").click(function(){
			$("#fontSize").text(++cnt)
			
			$(".text").animate({
				fontSize: cnt
			})
			$(".text1").animate({
				fontSize: (cnt+16)
			})
		})
		
		$("#sub").click(function(){
			if(cnt>1){
				$("#fontSize").text(--cnt)	
			}else{
				alert("최소값")
			}
			$(".text").animate({
				fontSize: cnt
			})
			$(".text1").animate({
				fontSize: (cnt+16)
			})
			
		})
	})
</script>

<style type="text/css">
