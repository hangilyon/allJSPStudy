<html>
<head>
<meta charset="UTF-8">
<title>quiz03</title>
<style type="text/css">
	#wrap {
	width: 500px;
	height:550px;
	background-color: pink;
	margin: auto;
	padding: 0;
	}
	#img {
	width: 500px;
	height: 500px;
	}
	#wrap button {
	width: 200px;
	height: 40px;
	
	
	}
</style>
<script type="text/javascript">

	function returnImg(){
		var getSrc = document.getElementById('img').src
		for(i=8;i>0;i--){
			setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+i+".jpg"
			if(getSrc==setSrc){
				if(i==1){
					i=8
					setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+i+".jpg"
					document.getElementById('img').src = setSrc
					document.getElementById('num').innerHTML = i
					break;
				}
				setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+(i-1)+".jpg"
				document.getElementById('img').src = setSrc
				document.getElementById('num').innerHTML = (i-1)
				break;
			}
		}
	}
	function nextImg(){
		var getSrc = document.getElementById('img').src
		for(i=1;i<=8;i++){
			setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+i+".jpg"
			if(getSrc==setSrc){
				if(i==8){
					i=1
					setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+i+".jpg"
					document.getElementById('img').src = setSrc
					document.getElementById('num').innerHTML = i
					break;
				}
				setSrc="file:///C:/java/jsp_workspace/javascript/resources/images/test"+(i+1)+".jpg"
				document.getElementById('img').src = setSrc
				document.getElementById('num').innerHTML = (i+1)
				break;
			}
		}
	}
	
</script>
</head>
<body>
	<div id="wrap">
		<p id="num">1</p>
		<img id="img" src="resources/images/test1.jpg">
		<button onclick="returnImg()">이전사진</button><button onclick="nextImg()">다음사진</button>
	</div>
</body>
</html>